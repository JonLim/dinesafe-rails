<h1><%= @establishment.name %></h1>

<p>
  <strong>Type: </strong>
  <%= @establishment.establishment_type %>
</p>

<p>
  <strong>Address: </strong>
  <%= @establishment.address %>
</p>

<p>
  <strong>Last Inspection Status: </strong>
  <%= @establishment.last_status %>
</p>

<h2>List of Inspections</h2>

<% @inspections.each do | inspection | %>
  <p>
    <strong>Inspection Date: <%= inspection.date %> (<%= inspection.status %>)</strong>
    <ul>
    <% inspection.infractions.each do | infraction | %>
      <li><%= infraction.details %></li>
    <% end %>
    </ul>
  </p>
<% end %>
