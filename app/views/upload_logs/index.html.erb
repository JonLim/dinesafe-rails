<div class="container-fluid">
  <div class="row">
    <h1>DineSafe Data Stats</h1>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>DineSafe Data</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Count</th>
          </tr>
        </thead>

        <tbody>
          <% @dinesafe_stats.each do | type, count | %>
            <tr>
              <td><%= type %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- col-md-6 -->
  </div> <!-- row -->

  <div class="row">
    <h2>Data Onboarding History</h2>

    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>File Name</th>
          <th>Establishments Created</th>
          <th>Inspections Created</th>
          <th>Infractions Created</th>
        </tr>
      </thead>

      <tbody>
        <% @uploads.each do | upload | %>
          <tr>
            <td><%= upload.date_uploaded %></td>
            <td><%= upload.file_name %></td>
            <td><%= upload.establishments_created %></td>
            <td><%= upload.inspections_created %></td>
            <td><%= upload.infractions_created %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- row -->
</div>